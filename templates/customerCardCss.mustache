/* Stripe logo */
#stripeLogo {
  margin-top: 5px;
  width: 40px;
  height: auto;
}


/* Main items */
#mainItems {
  margin-top: 4px;
  padding-left: 20px;
  padding-right: 0px;
  padding-top: 0px;
  padding-bottom: 0px;
  line-height: 18px;
}

.paymentsDetails {
  background:#f9f9f9;
  border-left:10px solid #ccc;
  margin-right: 0px;
  margin-left: 0px;
  margin-top: 2px;
  margin-bottom: 8px;
  padding-left: 6px;
  padding-top: 5px;
  padding-bottom: 5px;
}


/* Graph */

div.graph {
  position: relative;
  border-width: 1px;
  border-color: #999;
  border-left-style: solid;
  border-bottom-style: solid;
  margin-top: 8px;
  margin-bottom: 5px;
}

div.graphBar {
  position: absolute;
  border-top-style: solid;
  border-left-style: solid;
  border-right-style: solid;
  border-width: 1px;
  border-color: #4573d5;
  background-color: #7c9de5;
}

div.yAxisTick {
  position: absolute;
  width:3px;
  height: 1px;
  background-color: #999;
}

div.yAxisLabel {
  position: absolute;
  left: 5px;
  top: -5px;
  font-size: 10px;
  color: #777;
}

div.averageLine {
  position: absolute;
  width:100%;
  height: 1px;
  background-color: #f44;

}

