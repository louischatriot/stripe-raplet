/* Stripe logo */
#stripeLogo {
  margin-top: 5px;
  width: 40px;
  height: auto;
}


/* Payments details */
.paymentsDetails {
  background:#f9f9f9;
  border-left:10px solid #ccc;
  margin:1.5em 10px;
  padding:.5em 10px;
}


/* Graph */

div.graph {
  position: relative;
  border-width: 1px;
  border-color: #999;
  border-left-style: solid;
  border-bottom-style: solid;
  margin-top: 8px;
  margin-bottom: 5px;
}

div.graphBar {
  position: absolute;
  background-color: steelblue;
}

div.yAxisTick {
  position: absolute;
  width:3px;
  height: 1px;
  background-color: #999;
}

div.yAxisLabel {
  position: absolute;
  left: 5px;
  top: -5px;
  font-size: 10px;
  color: #777;
}

div.averageLine {
  position: absolute;
  width:100%;
  height: 1px;
  background-color: #f44;

}

